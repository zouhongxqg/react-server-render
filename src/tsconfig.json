{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "module": "commonjs",
    "removeComments": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": false,
    "target": "ES6",
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "scripthost",
      "es2017"
    ],
    "typeRoots": [
      "./declarations/",
      "../node_modules/@types/"
    ]
  }
}
